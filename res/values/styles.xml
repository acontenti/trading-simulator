<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MaterialActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
		<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
		<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
		<item name="android:fitsSystemWindows">true</item>
		<item name="android:windowBackground">@color/bkg</item>
		<item name="android:typeface">monospace</item>
	</style>

	<style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
	    <item name="android:src">@drawable/ic_action_core_overflow</item>
	</style>
	
    <style name="MaterialActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#59f</item>
    </style>

</resources>
